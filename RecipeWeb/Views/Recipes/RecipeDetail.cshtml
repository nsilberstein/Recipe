@using RecipeBizObjects
@model BizRecipe

@{
    ViewData["Title"] = "Recipe Details";
}

<h1 class="text-white bg-primary">Recipe Details</h1>

<div>
    <hr />
    <dl class="row text-alert-primary">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RecipeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecipeName)
        </dd>  
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumCaloriesPerServing)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumCaloriesPerServing)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumofIngredients)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumofIngredients)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumofSteps)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumofSteps)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatePublished)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatePublished)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateArchived)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateArchived)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RecipeStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecipeStatus)
 
    </dl>
</div>

<div class="card">
    <div class="card-header bg-light text-info">Ingredients</div>
    <div class="card-body">
        @foreach (BizRecipeIngredient r in Model.GetListOfIngredientPerRecipe())
        {
            <ul class="text-alert-primary">
                <li>@r.Ingredients</li>
            </ul>
        }
    </div>
</div>
<br />
<div class="card">
    <div class="card-header bg-light text-info">Instructions</div>
    <div class="card-body">
        @foreach (BizRecipeSteps s in Model.GetListOfStepPerRecipe())
        {
            <ul class="text-alert-primary">
                <li>@s.StepDesc</li>
            </ul>
        }
    </div>
</div>
<br />
<div class = "row">
<div class = "col-md-2">
    @Html.ActionLink("Edit", "Edit", new{id = Model.RecipeName}, new{Class = "btn btn-primary"})
</div>
<div class = "col-md-2">
    @Html.ActionLink("Delete", "Delete", new{id = Model.RecipeName}, new{Class = "btn btn-danger"})
</div>
</div>
