            </div>
            <div class="form-group">
                <label asp-for="CreatedByUserId" class="control-label"></label>
                <select asp-for="CreatedByUserId" asp-items=lstusername class="form-control">
                    <option value = "">Select a User</option>
                </select> 
                <span asp-validation-for="CreatedByUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CuisineTypeId" class="control-label"></label>
                <select asp-for="CuisineTypeId" asp-items=lstcuisinetype class="form-control" >
                    <option value ="">Select a Cuisine Type</option>
                </select>
                <span asp-validation-for="CuisineTypeId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="NumCaloriesPerServing" class="control-label"></label>
                <input asp-for="NumCaloriesPerServing" class="form-control" />
                <span asp-validation-for="NumCaloriesPerServing" class="text-danger"></span>
            </div>
              @*<div class = "form-group">
                 <label class = "control-label">@Html.DisplayNameFor(model=> model.NumofIngredients)</label>
               <label class = "form-control">@Html.DisplayFor(model=> model.NumofIngredients)</label> 
            </div>
              <div class = "form-group">
                 <label class = "control-label">@Html.DisplayNameFor(model=> model.NumofSteps)</label>
               <label class = "form-control">@Html.DisplayFor(model=> model.NumofSteps)</label> 
            </div>*@
            <div class="form-group">
                <label asp-for="DateCreated" class="control-label"></label>
                <input asp-for="DateCreated" class="form-control" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatePublished" class="control-label"></label>
                <input asp-for="DatePublished" class="form-control" />
                <span asp-validation-for="DatePublished" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateArchived" class="control-label"></label>
                <input asp-for="DateArchived" class="form-control" />
                <span asp-validation-for="DateArchived" class="text-danger"></span>
            </div>
