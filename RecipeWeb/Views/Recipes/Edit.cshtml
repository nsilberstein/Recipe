@model RecipeBizObjects.BizRecipe

@{
    ViewData["Title"] = "Edit";
    SelectList lstusername = new SelectList(Model.UserNameList(), "UserId", "UserName");
    SelectList lstcuisinetype = new SelectList(Model.CuisineTypeList(), "CuisineTypeId", "CuisineName");
}

<h1>Edit @Model.RecipeName</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type = "hidden" asp-for= "RecipeId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RecipeName" class="control-label"></label>
                <input asp-for="RecipeName" class="form-control" />
