                 <label class = "control-label">@Html.DisplayNameFor(model=> model.RecipeStatus)</label>
               <label class = "form-control">@Html.DisplayFor(model=> model.RecipeStatus)</label> 
            </div>*@
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
